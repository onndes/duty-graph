{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": false,
    "noImplicitAny": false,

    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src"]
}
